<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
{{#with resume.basics}}
    <meta name="description" content="{{name}}'s resume" />
    <meta name="keywords" content="{{name}}"/>
    <title>{{name}} &bull; {{email}} &bull; {{phone}}</title>
{{/with}}

    <style>
{{{css}}}
    </style>
  </head>
  <body>
{{#with resume.basics}}
    <header id="header" class="jumbotron fadeInDown animated">
      <div class="container">
				<div class="row">
					<div class="col-sm-4 img-container">
        		<img alt="{{pictureAlt}}" src="{{#if picture}}{{picture}}{{else}}{{gravatar}}{{/if}}" />
					</div>
					<div class="col-sm-8 intro">
						<div class="page-header">
			        <h1 itemprop="name">
			          {{#if namePrefix}}<small>{{namePrefix}}</small>{{/if}}
			          <strong id="name">{{name}}</strong>
							</h1>
			        <p>{{{summary}}}</p>
						</div>
						<ul class="list-inline">
	{{#if email}}
		          <li><a itemprop="email" href="mailto:{{email}}" title="{{email}}" data-toggle="tooltip" data-placement="bottom" target="_blank">
		            <span class="fa fa-envelope"></span>
		          </a></li>
	{{/if}}
	{{#if phone}}
							<li><a href="tel:{{phone}}" title="{{phone}}" data-toggle="tooltip" data-placement="bottom" target="_blank">
		            <span class="fa fa-phone"></span>
		          </a></li>
	{{/if}}
	{{#unless noPrint}}
							<li><a id="print-button" title="Print this page" data-toggle="tooltip" data-placement="bottom" type="button">
		            <span class="fa fa-print"></span>
		          </a></li>
	{{/unless}}
	{{#each profiles}}
							<li><a href="{{url}}" title="{{network}}" class="{{lowercase network}}" data-toggle="tooltip" data-placement="bottom" target="_blank">
		            <span class="fa fa-{{lowercase network}}"></span>
		          </a></li>
	{{/each}}
						</ul>
					</div>
				</div>
      </div>
    </header>
{{/with}}

    <div class="container">
      <div class="row">
        <article id="timeline" class="col-md-8">
          <h2 class="sr-only">Timeline</h2>
{{#each resume.work}}
          <section itemscope itemtype="http://schema.org/Organization">
            <h3 class="position">
              <span class="title">{{position}}</span>
							at
							<a itemprop="name" href="{{website}}" target="_blank">{{company}}</a>
						</h3>
            <div class="where-when">
	{{#if address}}
              <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                {{address}}
              </div>
	{{/if}}
              <div itemprop="event" itemscope itemtype="http://schema.org/Event">
                <span itemprop="startDate">{{startDate}}</span> &ndash; {{#if endDate}}<span itemprop="endDate">{{endDate}}</span>{{/if}}
							</div>
            </div>
            <div class="description">
              <p>{{summary}}</p>
              <ul>
  {{#each highlights}}
                <li>{{.}}</li>
	{{/each}}
              </ul>
            </div>
          </section>
{{/each}}
          <hr />
{{#each resume.education}}
          <section itemprop="alumniOf" itemscope itemtype="http://schema.org/EducationalOrganization">
            <h3 class="position"><a itemprop="name" href="{{website}}" target="_blank">{{institution}}</a></h3>
            <div class="where-when">
	{{#if address}}
              <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                {{address}}
              </div>
	{{/if}}
              <div itemprop="event" itemscope itemtype="http://schema.org/Event">
                <span itemprop="startDate">{{startDate}}</span> &ndash; {{#if endDate}}<span itemprop="endDate">{{endDate}}</span>{{/if}}
							</div>
            </div>
            <div class="description">
              <p>{{area}}</p>
            </div>
          </section>
{{/each}}
        </article>
        <aside id="misc" class="col-md-4 clearfix">
          <hr class="visible-xs visible-sm" />
{{#with resume.skills}}
          <h3>I'm good at</h3>
          <table id="skills" class="table">
	{{#each .}}
            <tr>
              <td class="skill-name">{{name}}</td>
              <td class="skill-progress">
                <div class="progress">
                  <div class="progress-bar" role="progressbar" aria-valuenow="{{level}}" aria-valuemin="0" aria-valuemax="100" style="width:{{level}}%">
                    <span class="sr-only">{{level}}%</span>
                  </div>
                </div>
              </td>
            </tr>
	{{/each}}
          </table>
					<ul class="list-inline text-center">
	{{#each .}}
		{{#each keywords}}
						<li><span class="label" style="background:{{labelColor}}">{{.}}</span></li>
		{{/each}}
	{{/each}}
					</ul>
{{/with}}
{{#with resume.languages}}
          <h3>Languages</h3>
					<p>
	{{#each .}}{{#if @index}}, {{/if}}{{language}}{{#if proficiency}} ({{proficiency}}){{/if}}{{/each}}
					</p>
{{/with}}
{{#with resume.references}}
					<hr>
	{{#each .}}
					<blockquote>
						<p>{{reference}}</p>
						<footer>{{name}}</footer>
					</blockquote>
	{{/each}}
{{/with}}
        </aside>
      </div>
    </div>
  </body>
</html>
